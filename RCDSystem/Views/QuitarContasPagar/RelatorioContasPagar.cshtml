@{
    ViewData["Title"] = "Relatorio Contas a Pagar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="page-inner">
        <div class="col-md-8 ml-auto mr-auto">

        </div>

        <div class="row mt-3">
            <div class="col-md-6 ml-auto mr-auto">
                <div class="card">
                    <div class="card-header">

                        <div class="row">

                            <div class="col-sm-3">
                            </div>

                            <div class="col-sm-6">
                                <h4>Relatorio - Contas a Pagar</h4>
                            </div>

                            <div class="col-sm-3">
                            </div>

                        </div>

                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-11 ml-auto mr-auto">
                                <div class="form-group">
                                    <label for="txtTipoConta">Tipo de Conta <span class="required-label">*</span></label>
                                    <select class="form-control  basic" id="txtTipoConta">
                                    </select>

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-5 ml-auto mr-auto">
                                <div class="form-group">
                                    <label for="txtDataInicial">Data Inicial<span class="required-label">*</span></label>
                                    <input id="txtDataInicial" class="form-control flatpickr flatpickr-input" type="date" placeholder="Data Inicial">
                                </div>
                            </div>
                            <div class="col-sm-5 ml-auto mr-auto">
                                <div class="form-group">
                                    <label for="txtDataFinal">Data Final<span class="required-label">*</span></label>
                                    <input id="txtDataFinal" class="form-control flatpickr flatpickr-input" type="date" placeholder="Data Final">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4 ml-auto mr-auto">
                            <div class="new-control new-radio radio-primary">
                                <label class="new-control new-radio radio-primary">
                                    <input type="radio" class="new-control-input" name="custom-radio-1" id="chkAbertas" checked>
                                    <span></span>Em Aberto
                                </label>

                                <label for="txtTipoConta">    <span class="required-label"></span></label>

                                <label class="new-control new-radio radio-primary">
                                    <input type="radio" class="new-control-input" name="custom-radio-1" id="chkPagas">
                                    <span></span>Pagas
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger  mb-4 mr-2 btn-lg" onclick="previewVencidas()">Emitir Vencidas</button>
                        <div class="col-sm-6 ml-auto mr-auto">
                        </div>
                        <button  type="button" class="btn btn-outline-primary  mb-4 mr-2 btn-lg" onclick="preview()">Emitir</button>

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

@section script{

    <script src="~/plugins/MomentJs.js"></script>
    <script src="~/plugins/jquery.mask.js"></script>
    <script src="~/plugins/flatpickr/flatpickr.js"></script>
    <script>
        $("#txtDataInicial").flatpickr(
            {
                dateFormat: "d/m/Y"
            });
    </script>
    <script>
        $("#txtDataFinal").flatpickr(
            {
                dateFormat: "d/m/Y"
            });
    </script>
    <script src="~/js/view/QuitarContasPagar/ContasPagar.js"></script>

}